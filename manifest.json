{
    "manifest_version": 3,
    "name": "Auto Message Extension",
    "version": "1.0",
    "description": "Invia automaticamente un messaggio quando una conversazione inizia.",
    "permissions": ["activeTab", "scripting", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://chatvisionz.com/*"], 
        "js": ["contentScript.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  